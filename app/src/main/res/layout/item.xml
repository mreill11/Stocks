<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_gravity="top|center"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    card_view:cardCornerRadius="6dp"
    card_view:cardUseCompatPadding="true"
    android:focusableInTouchMode="true">
    <!--android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:dividerPadding="8dp"-->

    <LinearLayout
        android:id="@+id/wrapper_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/inner_linear_layout1"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="15dp"
            android:paddingLeft="15dp"
            android:paddingBottom="15dp"
            android:paddingRight="15dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/sid_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GOOG"
                android:textStyle="bold"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Headline"
                android:textColor="@color/background_material_dark" />

            <TextView
                android:id="@+id/company_name_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Google"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Title"
                android:textColor="@color/background_material_dark" />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/inner_linear_layout2"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/quote_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="583.91"
                android:textColor="@color/background_material_dark"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:layout_centerInParent="true" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/inner_linear_layout3"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingTop="15dp"
            android:paddingLeft="5dp"
            android:paddingBottom="15dp"
            android:paddingRight="5dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/arrow_imageview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/stock_index_up"
                android:layout_marginTop="10dp" />

            <TextView
                android:id="@+id/change_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2.13%"
                android:textColor="@color/background_material_dark"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp" />

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>